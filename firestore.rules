rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User profiles: only the authenticated user may read or write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Messages: creation allowed by authenticated sender; read/update/delete by sender or recipient
    match /messages/{messageId} {
      allow create: if request.auth != null
        && request.resource.data.sender == request.auth.uid
        && request.resource.data.keys().hasAll(['sender','recipient','body']);

      allow read, update, delete: if request.auth != null
        && (resource.data.sender == request.auth.uid || resource.data.recipient == request.auth.uid);
    }

    // Example: calls collection â€” allow participants only
    match /calls/{callId} {
      allow create: if request.auth != null && request.resource.data.initiator == request.auth.uid;
      allow read, update, delete: if request.auth != null && (
        resource.data.initiator == request.auth.uid || resource.data.participant == request.auth.uid
      );
    }

    // Deny everything else by default for safety
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
